{
    "server": {
        "cluster": false,
        "port": 3001,
        "maxSockets": 4096,
        "timezone": "Europe/Moscow"
    },

    "services": {
        "Logs": {
            "initTimeout" : 50,
            "library": "Logger",
            "logs": {
                "access": {
                    "path": "/tmp/eventsreactor.access.log",
                    "level": "info"
                },
                "error": {
                    "path": "/tmp/eventsreactor.error.log",
                    "level": "info"
                }
            }
        },
        
        "Database" : {
            "library": "MySQLDatabase",
            "dependencies" : ["Logs"],
            "initTimeout" : 1500,
            "connection" : {
                "host" : "localhost",
                "port" : 3306,
                "user" : "andrey.kazakov",
                "password" : "andrey.kazakov.password",
                "database" : "guazo",
                "connectTimeout" : 1000,
                "connectionLimit" : 50
            }
        }
    }
}